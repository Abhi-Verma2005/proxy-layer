// Master dashboard database schema

// Master Dashboard DB (Supabase Postgres)
datasource master {
  provider = "postgresql"
  url      = env("MASTER_DATABASE_URL")
  shadowDatabaseUrl = env("MASTER_SHADOW_DB_URL") // For migrations
}

// Outline DB (Supabase Postgres)
datasource outline {
  provider = "postgresql"
  url      = env("OUTLINE_DATABASE_URL")
  shadowDatabaseUrl = env("OUTLINE_SHADOW_DB_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/master-client" // For master DB
}

generator outlineClient {
  provider = "prisma-client-js"
  output   = "../src/generated/outline-client" // For Outline DB
  previewFeatures = ["multiSchema"]
}

// Master database models
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Outline database models (mirroring Outline's schema)
model OutlineUser {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
} 